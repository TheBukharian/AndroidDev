<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/actBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="15dp"
        android:foregroundGravity="center"
        app:cardBackgroundColor="#7EFFFFFF"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/circled_angles"
                    android:drawableTop="@drawable/agenda"
                    android:paddingTop="10dp"
                    android:text="Agenda"
                    android:textColor="#787878"
                    android:elevation="5dp"/>

                <Button
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/circled_angles"
                    android:drawableTop="@drawable/speakers"
                    android:paddingTop="10dp"
                    android:text="Speakers"
                    android:textColor="#787878" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/circled_angles"
                    android:drawableTop="@drawable/team"
                    android:paddingTop="10dp"
                    android:text="Team"
                    android:textColor="#787878"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/circled_angles"
                    android:drawableTop="@drawable/coin"
                    android:paddingTop="16dp"
                    android:text="Sponsors"
                    android:textColor="#787878" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/circled_angles"
                    android:drawableTop="@drawable/map"
                    android:paddingTop="3dp"
                    android:text="Locate Us"

                    android:textColor="#787878"

                    />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/circled_angles"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:text="FAQ"
                    android:textColor="#FF3939"

                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/actBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="40dp"
            android:gravity="center_vertical"
            android:layout_marginStart="40dp"
            android:fontFamily="sans-serif-light"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/darklight"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="150dp"
            android:backgroundTint="#fff"
            android:scaleY="0.7"
            android:scaleX="0.7"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_share"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#fff"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_marginTop="18dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="DevFests are community-led, developer events hosted by GDG chapters around the globe focused on community building &amp; learning about Google technologies.Each DevFest is inspired by and uniquely tailored to the needs of the developer community and region that hosts it. "
        android:textSize="14sp"
        android:background="#60FFFFFF"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:textColor="#fff"
        android:paddingStart="30dp"
        android:textAlignment="center"
        android:paddingEnd="15dp"
        />





    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="155dp"
        android:paddingTop="10dp"
        android:layout_above="@+id/introText"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"
        android:src="@drawable/kkk" />

    <TextView
        android:id="@+id/introText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/secondText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Injecting the GDG"
        android:textColor="#fff"
        android:textSize="28sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/secondText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#6BFFFFFF"
        android:text="Developed by Asilbek Tilavov."
        />

</RelativeLayout>