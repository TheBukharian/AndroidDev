<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:id="@+id/myCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="235dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="30dp"
    android:layout_marginStart="35dp"
    android:layout_marginEnd="35dp"
    android:layout_marginBottom="25dp"
    android:layout_marginTop="10dp"
    >
    <ImageView
        android:id="@+id/cardImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#00FFFFFF"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        >

        <ImageView
            android:id="@+id/cardLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/cardTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="65dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingStart="10dp"
            android:text="AGENDA"
            android:textColor="?attr/CardtextColor"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/cardTxt"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:text="" />


        <com.sdsmdg.harjot.materialshadows.MaterialShadowViewWrapper
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            app:shadowAlpha="0.5"
            app:shadowOffsetX="10"
            app:shadowOffsetY="15">

            <Button
                android:id="@+id/goBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@drawable/circled_angles"
                android:elevation="55dp"
                android:text="GO"
                android:textColor="#66494949" />
        </com.sdsmdg.harjot.materialshadows.MaterialShadowViewWrapper>

    </RelativeLayout>

</androidx.cardview.widget.CardView>