<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_alignParentTop="true"
        android:background="#1B777777" />

    <androidx.cardview.widget.CardView
        android:id="@+id/speakerCard2"
        android:layout_width="110dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="40dp"
        android:elevation="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/speakerImage"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="0dp"
                android:src="@drawable/speakers" />

            <TextView
                android:id="@+id/speakerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/speakerImage"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:paddingStart="5dp"
                android:background="#61000000"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Abatibh Kapur"
                android:textAlignment="center"
                android:textColor="@color/WhiteText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/speakerDescrib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_below="@+id/speakerImage"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:textColor="#fff"
                android:padding="5dp"
                android:textAlignment="center"
                android:background="#DDF1BD00"
                android:text="This is the text for describtion of Developer"
                 />
        </RelativeLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/speakerCard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/speakerCard2"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/speakerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:maxHeight="50dp"
                android:text="Blablblblblbblb;b
                lblblblblblblblbblbl.blblblbl"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/speakerTitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/gradient_3" />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/speakerLinear"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="0dp"
                 >
                <ImageButton
                    android:id="@+id/instaBtnspeaker"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/instagram" />

                <ImageButton
                    android:id="@+id/faceBtnspeaker"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/facebook"

                    />

                <ImageButton
                    android:id="@+id/youtubeBtnspeaker"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:scaleY="1.5"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/youtube"

                    />
            </LinearLayout>


            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Company"
                android:textColor="#000000"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/companyLogo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/divider"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/companyName"
                android:src="@drawable/gradient_1" />




        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>